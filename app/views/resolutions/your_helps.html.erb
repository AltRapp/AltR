<div class="row">
      <div class="col-md-3">
            <ul class="sidebar-list">
                   <li class="sidebar-item"><%= link_to "J'aide", your_helps_path, class: "sidebar-link active" %></li>
                   <li class="sidebar-item"><%= link_to "Je me fais aider", your_resolutions_path, class: "sidebar-link" %></li>
                   <li class="sidebar-item"><%= link_to "Mes problÃ¨mes en attente", problems_path, class: "sidebar-link" %></li>
            </ul>
       </div>
    <div class="col-md-9">
        <div class="panel panel-default">
                 <div class="panel-heading">Mes discussions pour aider</div>
            <div class="panel-body">
                      <% @helps.order("id DESC").each do |help| %>
                <div class="row">
                   <div class="col-md-6">
                       <h3><%= link_to problem_path(help.problem) do %>
                       <%= help.problem.problem_type %>
                       <% end %></h3>
                   </div>
                   <div class="col-md-1 right">
                        <%= link_to user_path(help.problem.user) do %>
                           <%= image_tag avatar_url(help.problem.user), class:"img-circle avatar-medium" %>
                       <% end %>
                   </div>
                   <div class="col-md-5">
                        <%= help.problem.user.fullname %>
                   </div>
                </div>
                        <hr>
                   <% end %>
            </div>
        </div>
    </div>
</div>