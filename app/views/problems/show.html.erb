<div class="panel panel-default">
    <div class="panel-body">
        
        <!-- Informations principales -->
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-3 text-center">
                        <br>
                        <%= image_tag avatar_url(@problem.user), class:"img-circle avatar-large" %>
                        <br>
                        <%= @problem.user.fullname %>
                    </div>
                    <div class="col-md-9">
                        <div class="bloc">
                            <%= @problem.category %>
                        </div>
                        <h2><%= @problem.problem_type %></h2>
                        
                        <p><%= @problem.summary %></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
            </div>    
        </div>
    </div>
</div>